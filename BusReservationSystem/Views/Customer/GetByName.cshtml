@model IEnumerable<Bus.DomainModels.Trip>
@{
    ViewBag.Title = "GetByName";
}

<h2 class="text-center"> Journey Details</h2>

    <div class="container table-bordered" style=" border-color: black; margin-top: 30px;">

        <table class="table">

            <tr style="text-align:center">
                @*<th></th>*@
                <th> Bus Name </th>
                <th> Available Seats </th>
                <th> To Location </th>
                <th> Journey Date </th>
                <th> Price </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @*<td style="text-align:center"><b>@Html.DisplayFor(m => item.Route.FromLocation)</b> </td>*@

                    <td style="text-align:center">
                        <h4 style="color:darkblue"> @Html.DisplayFor(m => item.Bus.BusName)</h4>
                        @Html.DisplayFor(m => item.Bus.BusCategory)
                    </td>

                    <td style="text-align:center"> @Html.DisplayFor(m => item.AvailableSeats)</td>

                    <td style="text-align:center"> @Html.DisplayFor(m => item.Route.ToLocation)</td>

                    <td style="text-align:center">@Html.DisplayFor(m => item.JourneyDate)</td>

                    <td style="text-align:center">
                        <h4 style="color:darkred">@string.Format("{0:C}", item.Route.Price)</h4>
                        @Html.ActionLink("View Seats", "ViewSeats", "Customer", new { id = item.RouteId }, new { @class = "btn btn-primary" })
                    </td>

                </tr>

            }


        </table>

    </div>

<a class="btn btn-warning" style="float:right;margin-right:20px;margin-top:20px" asp-controller="Customer" asp-action="Index">Back</a>