@model Bus.DomainModels.Route
@{
    ViewData["Title"] = "Create";
}

<body style="
background-image:url('/images/pattern.jpg');
background-size:cover;
background-repeat:no-repeat;
background-position:center center">
</body>

<h1 style="margin-left: 14px">Add New Route</h1>

<form class="horizontal" asp-action="Create" method="post">

    <div class="form-group col-md-4">
        <label asp-for="FromLocation">From Location</label>
        <select asp-for="FromLocation" class="form-control">
            <option value="Pune">Pune</option>
            <option value="Hyderabad">Hyderabad</option>
            <option value="Bangalore">Bangalore</option>
        </select>

    </div>

    <div class="form-group col-md-4">
        <label asp-for="ToLocation">To Location</label>
        <input asp-for="ToLocation" class="form-control" placeholder="Enter To Location" />
        <span asp-validation-for="ToLocation" class="text-danger"></span>

    </div>

    <div class="form-group col-md-4">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Enter Price" />
        <span asp-validation-for="Price" class="text-danger"></span>

    </div>

    <div style="margin-left: 18px;">
        <input type="submit" class="btn btn-primary" value="Save" />
        <a class="btn btn-danger" asp-action="Index" asp-controller="Route">Cancel</a>
    </div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
