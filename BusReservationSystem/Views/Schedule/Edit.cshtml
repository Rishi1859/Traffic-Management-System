@model Bus.DomainModels.Trip
@{
    ViewData["Title"] = "Edit";
}

<body style="
background-image:url('/images/pattern.jpg');
background-size:cover;
background-repeat:no-repeat;
background-position:center center">
</body>

<h1 style="margin-left: 14px">Edit Trip</h1>

<form class="horizontal" asp-action="Edit" method="post">

    <div class="form-group col-md-4">
        <label asp-for="RouteId">Route Id</label>
        <input asp-for="RouteId" value="@Model.RouteId" class="form-control input-md" />
    </div>

    <div class="form-group col-md-4">
        <label asp-for="BusId">Bus Id</label>
        <input asp-for="BusId" value="@Model.BusId" class="form-control input-md" />
    </div>

    <div class="form-group col-md-4">
        <label asp-for="JourneyDate">Journey Date</label>
        <input asp-for="JourneyDate" value="@Model.JourneyDate"  class="form-control input-md" />
    </div>

    <div class="form-group col-md-4">
        <label asp-for="AvailableSeats">Available Seats</label>
        <input asp-for="AvailableSeats" value="@Model.AvailableSeats" class="form-control input-md" />
        <span asp-validation-for="AvailableSeats" class="text-danger"></span>
    </div>

    <div style="margin-left: 18px;">
        <input type="submit" class="btn btn-primary" value="Edit" />
        <a class="btn btn-danger" asp-action="Index" asp-controller="Schedule">Cancel</a>
    </div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
